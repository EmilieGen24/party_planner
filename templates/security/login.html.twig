{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <form method="post">
     {# MESSAGE ALERT #}
        {% for message in app.flashes('success-password')%}  
            <div class="alert alert-success"> 
                {{ message }}
            </div>
        {% endfor %}
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="connect">
               Vous êtes connecté en tant que : {{ app.user.userIdentifier }}, <a class="btn-logout" href="{{ logout_path() }}">Se déconnecter</a>
            </div>
        {% endif %}
        <div class="login">
            <h3 class="h3 mb-3 font-weight-normal">Merci de vous connecter</h3>
            <label class="password" for="username">Nom d'utilisateur : </label>
            <input type="text" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="username" required autofocus>
            <label class="password" for="password">Mot de passe : </label>
            <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>
            <input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">

            {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html

                <div class="checkbox mb-3">
                    <input type="checkbox" name="_remember_me" id="_remember_me">
                    <label for="_remember_me">Remember me</label>
                </div>
            #}

            <button class="btn btn-lg btn-primary" type="submit">Se connecter</button>
            <a href="{{ path('forgot_password') }}" class="">Mot de passe oublié ?</a>
        </div>
    </form>
{% endblock %}
